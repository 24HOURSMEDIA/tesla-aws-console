{
    "tesla-server-console": {
        "commands": {
            "appendDiskUsage": [
                {
                    "createPanel": false,
                    "appendToPanels": ["diskusage"]
                }
            ],
            "autoAppendPortPoll": {
                "all": {
                    "title": "All network connections",
                    "ip": "127.0.0.1",
                    "port": "all",
                    "active": true,
                    "createPanel": true,
                    "appendToPanelSets": ["netconn", "default"]
                },

                "port80": {
                    "title": "Port 80 (www)",
                    "ip": "127.0.0.1",
                    "port": 80,
                    "active": true,
                    "createPanel": true,
                    "appendToPanelSets": ["netconn"]
                },
                "port3306": {
                    "title": "Port 3306 (mysql)",
                    "ip": "127.0.0.1",
                    "port": 3306,
                    "active": true,
                    "createPanel": true,
                    "appendToPanelSets": ["netconn"]
                },
                "port11211": {
                    "title": "Port 11211 (memcached)",
                    "ip": "127.0.0.1",
                    "port": 11211,
                    "active": true,
                    "createPanel": true,
                    "appendToPanelSets": ["netconn"]

                },
                "port8080": {
                    "title": "Port 8080 (proxy port)",
                    "ip": "127.0.0.1",
                    "port": 8080,
                    "active": true,
                    "createPanel": true,
                    "appendToPanelSets": ["netconn"]

                },
                "port2000": {
                    "title": "Port 2000 (server console)",
                    "ip": "127.0.0.1",
                    "port": 2000,
                    "active": true,
                    "createPanel": true,
                    "appendToPanelSets": ["netconn"]

                }

            }
        },
        "poll": {
            "loadavg1": {
                "title": "load avg. 1 min.",
                "route": {
                    "name": "tesla_systeminfo_poll_loadavg",
                    "parameters": {
                        "interval": 1
                    }
                }
            },
            "loadavg5": {
                "title": "load avg. 5 min.",
                "route": {
                    "name": "tesla_systeminfo_poll_loadavg",
                    "parameters": {
                        "interval": 5
                    }
                }
            },
            "loadavg15": {
                "title": "load avg. 1 min.",
                "route": {
                    "name": "tesla_systeminfo_poll_loadavg",
                    "parameters": {
                        "interval": 15
                    }
                }
            },
            "cpuusage_user": {
                "title": "cpu user (%)",
                "route": {
                    "name": "tesla_systeminfo_poll_cpuusage",
                    "parameters": {
                        "type": "user"
                    }
                }
            },
            "cpuusage_idle": {
                "title": "cpu idle (%)",
                "route": {
                    "name": "tesla_systeminfo_poll_cpuusage",
                    "parameters": {
                        "type": "idle"
                    }
                }
            },
            "cpuusage_used": {
                "title": "cpu used",
                "route": {
                    "name": "tesla_systeminfo_poll_cpuusage",
                    "parameters": {
                        "type": "used"
                    }
                }
            },
            "cpuusage_steal": {
                "title": "cpu stolen",
                "route": {
                    "name": "tesla_systeminfo_poll_cpuusage",
                    "parameters": {
                        "type": "steal"
                    }
                }
            },
            "cpuusage_system": {
                "title": "cpu system",
                "route": {
                    "name": "tesla_systeminfo_poll_cpuusage",
                    "parameters": {
                        "type": "system"
                    }
                }
            },
            "networkconns_all_est": {
                "title": "network conns. est.",
                "route": {
                    "name": "tesla_systeminfo_poll_netportconnections",
                    "parameters": {
                        "port": "all",
                        "state": "established"
                    }
                }
            },


            "disks_maxusage": {
                "title": "device with max usage",
                "route": {
                    "name": "tesla_systeminfo_poll_disks_maxusage",
                    "parameters": {}
                }
            },

            "disks_dirsize_var_log": {
                "title": "size of /var/log",
                "route": {
                    "name": "tesla_systeminfo_diskdirsize",
                    "parameters": {
                        "dir": "/var/log"
                    }
                }
            },
            "disks_dirsize_var_cache_nginx": {
                "title": "size of /var/cache/nginx",
                "route": {
                    "name": "tesla_systeminfo_diskdirsize",
                    "parameters": {
                        "dir": "/var/cache/nginx"
                    }
                }
            },
            "php_apc_stat_miss_ratio": {
                "title": "apc file cache miss ratio",
                "route": {
                    "name": "tesla_systeminfo_php_apc_stat",
                    "parameters": {
                        "key": "miss_ratio"
                    }
                }
            }
        },
        "panels": {
            "health-summary": {
                "title": "%console.server_name% health summary",
                "items": [
                    {
                        "type": "poll",
                        "service": "loadavg1"
                    },
                    {
                        "type": "poll",
                        "service": "cpuusage_used"
                    },
                    {
                        "type": "poll",
                        "service": "networkconns_all_est"
                    },
                    {
                        "type": "poll",
                        "service": "disks_maxusage"
                    }
                ]
            },
            "cpu-usage": {
                "title": "CPU usage",
                "items": [
                    {
                        "type": "poll",
                        "service": "cpuusage_used"
                    },
                    {
                        "type": "poll",
                        "service": "cpuusage_user"
                    },
                    {
                        "type": "poll",
                        "service": "cpuusage_system"
                    },
                    {
                        "type": "poll",
                        "service": "cpuusage_steal"
                    },
                    {
                        "type": "poll",
                        "service": "cpuusage_idle"
                    }

                ]
            },
            "load-average": {
                "title": "Load average",
                "items": [
                    {
                        "type": "poll",
                        "service": "loadavg1"
                    },
                    {
                        "type": "poll",
                        "service": "loadavg5"
                    },
                    {
                        "type": "poll",
                        "service": "loadavg15"
                    }
                ]
            },
            "diskusage": {
                "title": "Discs",
                "items": [
                    {
                        "type": "poll",
                        "service": "disks_maxusage"
                    }
                ]
            },
            "dirusage": {
                "title": "Directories",
                "items": [
                    {
                        "type": "poll",
                        "service": "disks_dirsize_var_log"
                    },
                    {
                        "type": "poll",
                        "service": "disks_dirsize_var_cache_nginx"
                    }
                ]
            },
            "php-apc": {
                "title": "PHP APC",
                "items": [
                    {
                        "type": "poll",
                        "service": "php_apc_stat_miss_ratio"
                    }
                ]
            }


        },
        "panelsets": {
            "default": {
                "title": "Panels",
                "panels": ["health-summary"]
            },
            "cpu_load": {
                "title": "Cpu / Load average",
                "panels": ["load-average", "cpu-usage"]
            },
            "netconn": {
                "title": "NetConn",
                "panels": []

            },
            "disk": {
                "title": "Disc",
                "panels": ["diskusage", "dirusage"]
            },
            "php": {
                "title": "PHP",
                "panels": ["php-apc"]
            }
        },
        "etc": {
            "files": {
                "nginx": {
                    "title": "Nginx cfg",
                    "enabled": true,
                    "dirs": ["/etc/nginx"],
                    "name": "*"
                },
                "php": {
                    "title": "PHP cfg",
                    "enabled": true,
                    "dirs": ["/etc/php*"],
                    "name": "*"
                },
                "apache": {
                    "title": "Apache",
                    "enabled": true,
                    "dirs": ["/etc/apache*"],
                    "name": "*"
                }
            }
        },
        "stats": {
            "enabled": true,
            "prefix": "poll_",
            "suffix": ".txt",
            "datadir": "%console.stats.datadir%",
            "polls": {
                "loadavg1": {
                    "service": "loadavg1",
                    "interval": 60,
                    "enabled": true
                },
                "cpuusage_used": {
                    "service": "cpuusage_used",
                    "interval": 60,
                    "enabled": true
                },
                "cpuusage_user": {
                    "service": "cpuusage_user",
                    "interval": 60,
                    "enabled": true
                },
                "cpuusage_idle": {
                    "service": "cpuusage_idle",
                    "interval": 60,
                    "enabled": true
                },
                "cpuusage_system": {
                    "service": "cpuusage_system",
                    "interval": 60,
                    "enabled": true
                },
                "cpuusage_steal": {
                    "service": "cpuusage_steal",
                    "interval": 60,
                    "enabled": true
                },
                "disks_maxusage": {
                    "service": "disks_maxusage",
                    "interval": 60,
                    "enabled": true
                },
                "networkconns_all_est": {
                    "service": "networkconns_all_est",
                    "interval": 60,
                    "enabled": true
                }
            }
        }

    }
}

